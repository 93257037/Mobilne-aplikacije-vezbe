<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Naslov -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Podešavanja sinhronizacije"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Prikaz trenutnog intervala -->
    <TextView
        android:id="@+id/tvCurrentInterval"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trenutni interval: Nikad"
        android:textSize="16sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <!-- Grupa radio button-a za izbor intervala -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odaberite interval sinhronizacije:"
        android:textSize="16sp"
        android:layout_marginBottom="12dp" />

    <RadioGroup
        android:id="@+id/rgSyncInterval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp">

        <RadioButton
            android:id="@+id/rbNever"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nikad"
            android:textSize="16sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/rb1Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Svakog 1 minuta"
            android:textSize="16sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/rb15Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Svakih 15 minuta"
            android:textSize="16sp"
            android:padding="8dp" />

        <RadioButton
            android:id="@+id/rb30Min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Svakih 30 minuta"
            android:textSize="16sp"
            android:padding="8dp" />

    </RadioGroup>

    <!-- Dugme za čuvanje -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sačuvaj podešavanja"
        android:padding="12dp" />

</LinearLayout>

