<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisija za korišćenje interneta -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OdNule"
        tools:targetApi="31">

        <!-- SplashScreen - Početni ekran aplikacije (LAUNCHER) -->
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- LoginScreen - Ekran za prijavu korisnika -->
        <activity
            android:name=".LoginScreen"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- RegisterScreen - Ekran za registraciju novog korisnika -->
        <activity
            android:name=".RegisterScreen"
            android:exported="false"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

        <!-- HomeScreen - Glavni ekran aplikacije sa NavigationDrawer -->
        <activity
            android:name=".HomeScreen"
            android:exported="false" />

        <!-- ProductDetailScreen - Ekran sa detaljima proizvoda -->
        <activity
            android:name=".ProductDetailScreen"
            android:exported="false"
            android:parentActivityName=".HomeScreen" />

        <!-- MainActivity - Originalna glavna aktivnost (ostaje za kompatibilnost) -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

    </application>

</manifest>