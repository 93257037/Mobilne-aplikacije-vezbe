<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".BeleškeFragment">

    <!-- ZAHTEV 8: RecyclerView za prikaz liste beleški -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBeleske"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Kontejner za dugmad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:gravity="center">

        <!-- ZAHTEV 8: Dugme "Dodaj belešku" -->
        <Button
            android:id="@+id/buttonDodajBelesku"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="@string/dodaj_belesku" />

        <!-- ZAHTEV 8, 11: Dugme "Filtriraj po datumu" -->
        <Button
            android:id="@+id/buttonFiltriraj"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="@string/filtriraj_po_datumu" />

    </LinearLayout>

</LinearLayout>

